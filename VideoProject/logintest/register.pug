doctype html
html
    head
        title Responsive Login Form Design
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        style
            include style.css
    body
        .wrapper
            .welcome
                h3 Welcome, Please Register!
            form.form(method='POST', action='register')
                .signup
                    .form-group
                        input#userName(type='text', placeholder='User', required='')
                    .form-group
                        input#userEmail(type='email', placeholder='Email', required='')
                    .form-group
                        input#userPass(type='password', placeholder='Password', required='')
                    button.btn(type='submit', onclick='functionBlah()') SIGN UP
                    .account-exist
                        | Already have an account?
                        a#login(href='/login') Login
        script(src='main.js')